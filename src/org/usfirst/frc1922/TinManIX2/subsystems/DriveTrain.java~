    SpeedController rearLeftSC = RobotMap.driveTrainRearLeftSC;
    SpeedController rearRightSC = RobotMap.driveTrainRearRightSC;
    SpeedController frontLeftSC = RobotMap.driveTrainFrontLeftSC;
    SpeedController frontRightSC = RobotMap.driveTrainFrontRightSC;
    RobotDrive robotDrive41 = RobotMap.driveTrainRobotDrive41;

    // END AUTOGENERATED CODE, SOURCE=ROBOTBUILDER ID=DECLARATIONS
    RobotDrive robotdrive = new RobotDrive(frontLeftSC, rearLeftSC, frontRightSC, rearRightSC);
    
